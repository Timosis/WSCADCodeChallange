<Window x:Class="WSCADCodeChallange.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSCADCodeChallange"
        mc:Ignorable="d"
        Background="DarkCyan"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="Test">

        <Button x:Name="button" Content="Draw Shapes" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="button_Click"/>

        <Viewbox Stretch="Uniform">
            <Border BorderThickness="2"  Margin="10,35,10,10">
                <Canvas x:Name="Canvas" HorizontalAlignment="Center" VerticalAlignment="Center" Width="0" Height="0"
          RenderTransform="1 0 0 -1 0 0">
                </Canvas>
            </Border>

        </Viewbox>
    </Grid>
</Window>
