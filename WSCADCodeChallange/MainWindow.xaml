<Window x:Class="WSCADCodeChallange.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSCADCodeChallange"
        mc:Ignorable="d"
        Background="Black"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="button" Content="Draw Shapes" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="button_Click"/>
        <Border BorderThickness="2" BorderBrush="Black" Margin="10,35,10,10">
            <Canvas x:Name="Canvas" VerticalAlignment="Center" HorizontalAlignment="Center" >
            </Canvas>
        </Border>
    </Grid>
</Window>
